<% provide(:title, 'About') %>
    <div class="container-narrow">
        <%= render :partial => 'layouts/header', :locals => { :active => '' }  %>

<h1>Listing payments</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Lendee's Email</th>
    <th>Note</th>
    <th>Amount Owed</th>
    <th>Send Reminder Emails</th>
    <th>Paid Status</th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.email %></td>
    <td><%= payment.description %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.frequency %></td>
    <td><%= payment.paid %></td>
    <!--<td><%= link_to 'Show', payment %></td>-->
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Delete', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Payment', new_payment_path, class: "btn btn-primary" %>
<br>

<%= render 'layouts/footer' %>
    </div>