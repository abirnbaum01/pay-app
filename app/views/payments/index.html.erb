<% provide(:title, 'Index') %>
    <div class="container-narrow">
        <%= render :partial => 'layouts/header', :locals => { :active => 'Payments' }  %>



<%= render 'layouts/render_messages' %>


<% if current_user.not_registered != 1 %>
	<%= render 'payments/index_loaner' %>
	<br/>
	<hr>
	<%= render 'payments/index_payer' %>
<% else %>
	<%= render 'payments/index_payer' %>
	<br/>
	<hr>
	<h1>Payments owed to you</h1>
	<p>You cannot track payments owed to you, because you are not a registered user.  But fear not, you can become one for free in a few seconds.  To track payments that your friends owe you and automatically send them reminders, sign up below.</p>
	<%= link_to 'Sign Up Now', edit_user_registration_path, class: "btn btn-primary" %>

<% end %>



<%= render 'layouts/footer' %>
    </div>