<h1>Payments owed to others</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Borrower</th>
    <th>Owe money to</th>
    <th>Description</th>
    <th>Amount Owed</th>
    <th>Paid Status</th>
    <th></th>
  </tr>

<% @payments_all.sort { |a, b| a.user.email <=> b.user.email }.each do |payment| %>
  <tr>
    <% if payment.email == current_user.email %>
    <td><%= payment.email %></td>
    <td><%= payment.user.email %></td>
    <td><%= payment.description %></td>
    <td>$<%= payment.amount %></td>
    <td><%= payment.paid.capitalize %></td>
    <!--<td><%#= link_to 'Show', payment %></td>-->
    <td><%= link_to 'Edit status', edit_payment_path(payment) %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
