<div class="masthead">
	<ul class="nav nav-pills pull-right">
		<% if user_signed_in? %>
			<li <% if active == 'Payments' %> class="active" <% end %> >
				<%= link_to "Payments", payments_path %> 
			</li>

			<li <% if active == 'Edit account' %> class="active" <% end %> >
				<%= link_to "Edit Account", edit_user_registration_path %> 
			</li>

			<li <% if active == 'Logout' %> class="active" <% end %> >
				<%= link_to('Logout', destroy_user_session_path, :method => :delete) %> 
			</li>
		<% else %>
			<li <% if active == 'Home' %> class="active" <% end %> >
				<%= link_to "Home", beta_path %>
			</li>
			<li <% if active == 'About' %> class="active" <% end %> >
				<%= link_to "About", about_path %>
			</li>
			<li <% if active == 'Sign in' %> class="active" <% end %> >
				<%= link_to "Sign In", new_user_session_path %>
			</li>

			<li <% if active == 'Sign up' %> class="active" <% end %> >
				<%= link_to "Sign up now!", new_user_registration_path %>
			</li>

		<% end %>

		<% if user_signed_in? %>
			
			<p align="right">Logged in as <%= current_user.email %></p>
		<% end %>	
	</ul>
	<h3 class="muted">
		PayMonkee
		<%= image_tag "monkey.jpg", :size => '35x35', class: "img-rounded" %>

	</h3>

</div>	
